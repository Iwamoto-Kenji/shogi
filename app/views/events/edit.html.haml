.main-wrapper
  .post-new-container
    %h2 編集する
    .form
      = form_with model: @post, local: true ,url: event_path, method: :patch do |f|
        .title-field
          = f.label :"イベント名"
          %br/
          = f.text_field  :name, class: "title"
        .image-field
          = f.label :"写真"
          %br/
          = f.file_field  :image, class: "image"
        .content-field
          = f.label :"内容紹介"
          = f.text_area :text
        .actions
          = f.submit "編集", class: "submit-btn"
