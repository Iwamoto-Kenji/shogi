.container
  .box-show
    = image_tag @posts.image.url, class: 'box-image-show'

  %table.event-show
    %tr
      %th 投稿者
      %td
        = @posts.user.name
    %tr
      %th イベント名
      %td
        = @posts.name
    %tr
      %th 説明
      %td
        = simple_format @posts.text
  %br
  - if user_signed_in? && current_user.id == @posts.user_id
    = link_to "編集", edit_event_path(@posts.id), class: "btn btn-primary"
    = link_to '削除', "/events/#{@posts.id}", method: :delete, class: "btn btn-danger"

%br